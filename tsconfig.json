{
  "include": ["src/global.d.ts", "src/**/*.ts", "__tests__/**/*.ts"],
  "compilerOptions": {
    // "skipLibCheck": true,
    // "forceConsistentCasingInFileNames": true,
    // "allowSyntheticDefaultImports": true,
    // "declaration": true,
    // "noEmitHelpers": false,
    // "importHelpers": false,

    // "lib": [
    //   "dom",
    //   "dom.iterable",
    //   "esnext"
    // ],
    // "module": "es2015",
    // "noUnusedLocals": false,
    // "noUnusedParameters": false,
    // "outDir": "dist",
    // "sourceMap": true,
    // "target": "es2015",

    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "noEmit": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,

    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "isolatedModules": false,

    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"]
  }
}
